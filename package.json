{
    "name": "wayfarer-api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "prestart": "npm run build",
        "start": "node ./build/bin/www",
        "devStart": "nodemon --exec babel-node ./src/bin/www",
        "devServer": "npm-run-all --parallel dev-server localtunnel",
        "build": "babel ./src --out-dir build",
        "lint": "eslint ./src",
        "localtunnel": "lt --port 3000 --subdomain express-starter-kit",
        "test": "nyc --reporter=html --reporter=text --reporter=lcov mocha -r @babel/register -r src/testsetup/stubs.js src/**/*.test.js",
        "uploadCoverage": "nyc report --reporter=text-lcov | coveralls",
        "posttest": "npm run uploadCoverage",
        "dev-migration": "node  ./src/db/migrations.db",
        "heroku-prebuild": "rm -rf node_modules"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peterayeniofficial/WayFarer-API.git"
    },
    "keywords": [
        "API",
        "Transportation"
    ],
    "author": "Peter Ayeni",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/peterayeniofficial/WayFarer-API/issues"
    },
    "homepage": "https://github.com/peterayeniofficial/WayFarer-API#readme",
    "dependencies": {
        "bcrypt": "^3.0.6",
        "cookie-parser": "~1.4.3",
        "cors": "^2.8.5",
        "debug": "^4.1.1",
        "dotenv": "^8.0.0",
        "express": "~4.16.0",
        "express-validator": "^6.1.0",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "morgan": "~1.9.0",
        "nodemon": "^1.19.1",
        "pg": "^7.11.0",
        "swagger-jsdoc": "^3.3.0",
        "swagger-ui-express": "^4.0.7",
        "@babel/runtime": "^7.4.5"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/register": "^7.4.4",
        "@babel/runtime": "^7.4.5",
        "chai": "^4.2.0",
        "chance": "^1.0.18",
        "coveralls": "^3.0.4",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.18.0",
        "faker": "^4.1.0",
        "json-schema-faker": "^0.5.0-rc17",
        "json-server": "^0.15.0",
        "localtunnel": "^1.9.2",
        "make-runnable": "^1.3.6",
        "mocha": "^6.1.4",
        "npm-run-all": "^4.1.5",
        "nyc": "^14.1.1",
        "sinon": "^7.3.2",
        "sinon-chai": "^3.3.0",
        "supertest": "^4.0.2"
    }
}
